#!/bin/sh

prefix=@prefix@
exec_prefix=@exec_prefix@
exec_prefix_set=no

usage()
{
	cat <<EOF
Usage: $0 [OPTIONS] [LIBRARIES]
Options:
	[--prefix[=DIR]]
	[--exec-prefix[=DIR]]
	[--version]
	[--libs]
	[--cxxflags]
Libraries:
	mysql
EOF
	exit $1
}

if test $# -eq 0; then
	usage 1 1>&2
fi

lib_mysql=yes

while test $# -gt 0; do
  case "$1" in
  -*=*) optarg=`echo "$1" | sed 's/[-_a-zA-Z0-9]*=//'` ;;
  *) optarg= ;;
  esac

  case $1 in
    --prefix=*)
      prefix=$optarg
      if test $exec_prefix_set = no ; then
        exec_prefix=$optarg
      fi
      ;;
    --prefix)
      echo_prefix=yes
      ;;
    --exec-prefix=*)
      exec_prefix=$optarg
      exec_prefix_set=yes
      ;;
    --exec-prefix)
      echo_exec_prefix=yes
      ;;
    --version)
      echo @MYSQL_VERSION@
      exit 0
      ;;
    --cxxflags)
      includes=""
      if test "@includedir@" != /usr/include ; then
        includes="-I@includedir@"
      fi
      includes="${includes} -I@includedir@/@PACKAGE@"
      echo_cxxflags=yes
      ;;
    --libs)
      echo_libs=yes
      ;;
    mysql)
      lib_mysql=yes
      ;;
    *)
      usage 1 1>&2
      ;;
  esac
  shift
done

if test "$echo_prefix" = "yes"; then
	echo $prefix
fi
if test "$echo_exec_prefix" = "yes"; then
	echo $exec_prefix
fi
if test "$echo_lock_dir" = "yes"; then
	echo $lock_dir
fi
if test "$echo_cxxflags" = "yes"; then
	cxxflags=""
	echo $includes $cxxflags
fi
if test "$echo_libs" = "yes"; then
	libsp=""
	libsa=""
	if test "$lib_mysql" = "yes"; then
		libsp="$libsp -lmysqlclient"
	fi
	if test "@libdir@" != /usr/lib ; then
	    echo -L@libdir@ $libsp $libsa
	else
	    echo $libsp $libsa
	fi
fi
